<div class="medium-centered large-6 large-centered columns">
  <% if @job_requests.size > 0 %>
    <h4>Job Requests Sent</h4>
    <% @job_requests.each do |job_request| %>
      <%= render job_request %>
    <% end %>
  <% else %>
    <h4>No Job Request Sent Yet</h4>
    <p>
      Search for jobs on the <%= link_to 'dashboard page', dashboard_path %> and sent request from there.
    </p>
  <% end %>
</div>
