<div class="users medium-centered medium-6 large-4 large-centered columns">
  <h4 class="text-center">
    <%= image_tag @user.avatar.url, :class => "avatar" %>
    <div>
      <%= @user.name %> is a <%= @user.is_homeowner ? 'has properties for maintainence' : 'Job Seeker' %>
    </div>
  </h4>

  <% if @user.is_homeowner %>
    <% if @user.job_postings.size > 0 %>
      <h5>Below are Jobs Posted by <%= @user.name %></h5>
      <% @user.job_postings.each do |j| %>
        <%= render j %>
      <% end %>
    <% end %>
  <% else %>
    <h5><%= @user.name %>'s Recommendations</h5>
    <div class="card">
      <div class="card-divider">
        <% if @users_who_recommended.size > 0 %>
          <ul>
            <% @users_who_recommended.each do |u| %>
              <li><%= link_to u.name, user_path(u) %></li>
            <% end %>
          </ul>
        <% else %>
          No one has recommended <%= @user.name %> yet.
        <% end %>
      </div>
    </div>

    <h5>Jobs completed by <%= @user.name %></h5>
    <% if @job_postings.size > 0 %>
      <% @job_postings.each do |j| %>
        <%= render j %>
      <% end %>
    <% else %>
      No jobs completed yet.
    <% end %>
  <% end %>

</div>
